# =============================================================================
# Event Ticket Booking Platform — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=ticketadmin
POSTGRES_PASSWORD=changeme_pg_secret
POSTGRES_DB=event_tickets

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_secret

# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BROKERS=kafka:9092

# ── Elasticsearch ─────────────────────────────────────────────────────────────
ELASTICSEARCH_URL=http://elasticsearch:9200

# ── MinIO (S3-compatible) ─────────────────────────────────────────────────────
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme_minio_secret
MINIO_BUCKET=event-assets
MINIO_USE_SSL=false

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET=changeme_jwt_secret_at_least_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ── Stripe (Payment) ─────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_changeme
STRIPE_WEBHOOK_SECRET=whsec_changeme

# ── Notification ──────────────────────────────────────────────────────────────
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@eventtickets.local

# ── Service Ports ─────────────────────────────────────────────────────────────
USER_SERVICE_PORT=3001
EVENT_SERVICE_PORT=3002
BOOKING_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
SEARCH_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
CART_SERVICE_PORT=3007
WAITLIST_SERVICE_PORT=3008

# ── Booking Holds ─────────────────────────────────────────────────────────────
HOLD_TTL_SECONDS=300
IDEMPOTENCY_TTL_SECONDS=86400

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=info
NODE_ENV=development
